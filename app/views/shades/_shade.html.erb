
<div class="product-box">
	<div class="product-in-shade">
		<%= link_to image_tag(shade.product.photo_url), product_path(shade.product) %>
		<%= content_tag :div, "", style: "background-color: ##{shade.hex_color};", class: "product-shade" %>
	</div>
	<p><%= shade.product.name %></p>
	<p><%= shade.product.brand.name %></p>
		<%= shade.name %>
		<% if @color %>
			<% if shade.hex_color == @color.hex %>
				<span style="color: red;">Perfect Match!</span>
			<% else %>
				<span style="color:red;">Close Match!</span>
			<% end %>
		<% end %>
	</p>
	<p class="finish"><%= shade.finish %></p>
</div>
