<p id="notice"><%= notice %></p>

<h1>Listing Shades</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Finish</th>
      <th>Product</th>
      <th>Color</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shades.each do |shade| %>
      <tr>
        <td><%= shade.name %></td>
        <td><%= shade.finish %></td>
        <td><%= shade.product %></td>
        <td><%= shade.color %></td>
        <td><%= link_to 'Show', shade %></td>
        <td><%= link_to 'Edit', edit_shade_path(shade) %></td>
        <td><%= link_to 'Destroy', shade, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

