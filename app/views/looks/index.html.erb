
<div class="page-header">
	<h1>Makeup Looks</h1>
	<div class="line"></div>
</div>

<div class="search-form">
	<%= form_tag({controller: "looks", action: "index"}, method: "get", remote: true) do %>
		<div class="form-group">
				<%= text_field_tag(:search,"", class: "form-control", placeholder: "Search...") %>
			  <%= button_tag(type: 'submit', class: "btn btn-default") do %>
					<span class="glyphicon glyphicon-search"></span>
				<% end %>
		</div>
	<% end %>
</div>

<div class="shade-looks container-fluid text-center" id="ajax-target">
	<%= render partial: 'looks/look_square', as: 'look', collection: @looks %>
</div>

<%= will_paginate @looks %>
