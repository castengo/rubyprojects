<hr>
<div class="container-fluid">
  <div class="row">
    <div class="col-md-5">
      <%= raw get_embedded_instagram(@look.image_url) %>
    </div>
    <div class="col-md-7">
      <p>
        <strong>Name:</strong>
        <%= @look.name %>
      </p>

      <p>
        <strong>Caption:</strong>
        <%= @look.caption  %>
      </p>

      <p>
        <strong>Tags:</strong>
        <%= @look.tags %>
      </p>
      <div id="look-shades">
        <%= render partial: 'shades/shade_square', collection: @shades %>
      </div>
      <div class="search-form">
      	<%= form_tag({controller: "looks", action: "show"}, method: "get", remote: true) do %>
      		<div class="form-group">
      				<%= text_field_tag(:search,"", class: "form-control", placeholder: "Search...") %>
      			  <%= button_tag(type: 'submit', class: "btn btn-default") do %>
      					<span class="glyphicon glyphicon-search"></span>
      				<% end %>
      		</div>
      	<% end %>
      </div>
      <div id="found-shades">
      </div>
    </div>
  </div>
</div>
