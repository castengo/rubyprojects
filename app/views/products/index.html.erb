
<div class="page-header">
	<h1>Products</h1>
	<div class="line"></div>
</div>

<div class="search-form">
	<%= form_tag({controller: "products", action: "index"}, method: "get", remote: true) do %>
		<div class="form-group">
				<%= text_field_tag(:name,"", class: "form-control", placeholder: "Search...") %>
			  <%= button_tag(type: 'submit', class: "btn btn-default") do %>
					<span class="glyphicon glyphicon-search"></span>
				<% end %>
		</div>
	<% end %>
</div>

<p class="finish order">*Ordered by most viewed</p>

<div class="text-center" id="products-list">
	<%= render @products %>
</div>
<div class="text-center">
	<%= will_paginate @products %>
</div>
