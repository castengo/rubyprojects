<h1>New <%=@brand.name%> Product</h1>

<div class="search-form">
	<%= form_tag({controller: "scanner", action: "scan"}, method: "get", remote: true) do %>
		<div class="form-group">
        <%= hidden_field_tag(:brand_id, @brand.id) %>
				<%= text_field_tag(:scan_url,"", class: "form-control", placeholder: "Enter abh product url") %>
			  <%= button_tag(type: 'submit', class: "btn btn-default") do %>
					<span class="glyphicon glyphicon-search"></span>
				<% end %>
		</div>
	<% end %>
</div>

<div id="target">
  <%= render 'form' %>
</div>



<%= link_to 'Cancel', brand_path(@brand) %>
