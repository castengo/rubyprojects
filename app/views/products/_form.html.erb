
<%= form_for([@brand, @product]) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :shades_group %><br>
    <%= f.text_field :shades_group %>
  </div>
  <div class="field">
    <%= f.label :multiple_colors %><br>
    <%= f.text_field :multiple_colors %>
  </div>
  <div class="field">
    <%= f.label :product_type %><br>
    <%= f.text_field :product_type %>
  </div>
  <div class="field">
    <%= f.label :short_type %><br>
    <%= f.select :short_type, @short_types %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, rows: 10, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :no_of_shades %><br>
    <%= f.text_field :no_of_shades %>
  </div>
  <div class="field">
    <%= f.label :photo_url %><br>
    <%= f.text_field :photo_url %>
  </div>
  <div class="field">
    <%= f.label :direct_link %><br>
    <%= f.text_field :direct_link %>
  </div>
  <div class="field">
    <%= f.label :application %><br>
    <%= f.text_field :application %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </div>

<% if f.object.persisted? %>
  <h2>Only to edit position</h2>
  <table>
    <thead>
      <th>Position</th>
      <th>Name</th>
      <th>Hex Color</th>
      <th>Finish</th>
      <th>Colors</th>
    </thead>
    <tbody>
    <%= f.fields_for :shades do |ff| %>
      <% if ff.object.persisted? %>
        <%= render 'shade_fields', :f => ff %>
      <% end %>
    <% end %>
    </tbody>
  </table>
<% end %>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
