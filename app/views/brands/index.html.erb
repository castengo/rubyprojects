
<div class="page-header">
	<h1>Brands</h1>
	<div class="line"></div>
</div>


<%= form_tag({controller: "brands", action: "index"}, method: "get", remote: true, class: "form-inline") do %>
  <div class="form-group">
	  <%= text_field_tag(:name,"", class: "form-control", placeholder: "Enter brand name") %>
	  <%= submit_tag("Search",class: "btn btn-default") %>
  </div>
<% end %>

<div id="brands-list">
  <%= render @brands %>
</div>


