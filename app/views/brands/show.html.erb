
<h1><%= link_to image_tag(@brand.logo_url, :class=>"brand-show"), @brand.website_url, target: "_blank" %></h1>

<p>
	<%= link_to 'Back to Brands', brands_path %>
	<% if logged_in? %>
		| <%= link_to "EDIT BRAND", edit_brand_path(@brand) %> | 
		<%= link_to "DELETE BRAND", @brand, method: :delete %> |
		<%= link_to "ADD PRODUCT", new_brand_product_path(@brand) %>
	<% end %>
</p>

<div class="products-partial">
	<%= render @brand.products %>
</div>
