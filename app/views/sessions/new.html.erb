<h1>Login</h1>

<%= form_for(:user, url: sessions_path) do |f| %>
	
	<div class="form-group">
		<%= f.label :name %><br/>
		<%= f.text_field :name%>
	</div>

	<p/>

	<div class="form-group">
		<%= f.label :password %><br/>
		<%= f.password_field :password%>
	</div>

	<div class="actions">
		<%= f.submit "Login", class: "btn btn-default" %>
	</div>
<% end %>
